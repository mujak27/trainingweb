generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnimeGenre {
  Romance
  Drama
  Action
  Comedy
  Horror
  Fantasy
}

model User {
  userId        String          @id @default(uuid())
  userName      String          @unique
  userEmail     String
  userPassword  String
  userAdmin     Boolean         @default(false)
  animeFavorite AnimeFavorite[]
}

model Anime {
  animeId          String          @id @default(uuid())
  animeName        String
  animeImageLink   String
  animeReleaseDate String
  animeGenre       String
  animeFavorite    AnimeFavorite[]
}

model AnimeFavorite {
  animeFavoriteId String @default(uuid()) @unique
  anime           Anime  @relation(fields: [animeAnimeId], references: [animeId], onDelete: Cascade)
  animeAnimeId    String
  user            User   @relation(fields: [userUserId], references: [userId], onDelete: Cascade)
  userUserId      String

  @@index([animeAnimeId, userUserId, animeFavoriteId])
  @@map("animeFavorite")
}
