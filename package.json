{
  "name": "training",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "apollo-server": "^3.10.0",
    "apollo-server-core": "^3.10.0",
    "apollo-server-express": "^3.10.0",
    "concurrently": "^7.3.0",
    "crypto": "^1.0.1",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql-middleware": "^6.1.31",
    "graphql-subscriptions": "^2.0.0",
    "nanoid": "^4.0.0",
    "nexus": "^1.3.0",
    "nodemon": "^2.0.19",
    "prisma-client": "^0.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "build": "npm run back:prisma:push && npm run back:nexus:generate && react-scripts build && node --loader ts-node/esm src/server.ts",
    "react-build" : "react-scripts build",
    "monorepo": "concurrently 'npm run back:nodemon' 'npm run front:react:start'",
    "front:react:start": "react-scripts start",
    "back:nodemon": "nodemon --watch './**/*.ts' --exec 'node --loader ts-node/esm' src/server.ts",
    "back:nodeLoader": "node --loader ts-node/esm src/server.ts",
    "back:nexus:generate": "ts-node --transpile-only src/backend/types/nexusSchemaGen.ts",
    "back:prisma:migrateDev": "prisma migrate dev --schema src/backend/prisma/schema.prisma",
    "back:prisma:push": "prisma db push --schema src/backend/prisma/schema.prisma"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@prisma/client": "^4.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/pg": "^8.6.5",
    "bcrypt": "^5.0.1",
    "pg": "^8.7.3",
    "prisma": "^4.1.0"
  }
}
